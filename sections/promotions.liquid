          "type": "checkbox",
          "id": "use_collection_image",
          "label": "Show collection featured image",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Collection"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add a brief introduction to your collection.</p>"
        },
        {
          "type": "text",
          "id": "button",
          "label": "Button text",
          "default": "Button"
        },
        {
          "type": "select",
          "id": "align_self",
          "label": "Align text",
          "options": [
            {
              "value": "top",
              "label": "Top"
            },
            {
              "value": "center",
              "label": "Center"
            },
            {
              "value": "end",
              "label": "Bottom"
            }
          ],
          "default": "center"
        },
        {
          "type": "select",
          "id": "width",
          "label": "Block width",
          "options": [
            {
              "value": "span-12",
              "label": "100%"
            },
            {
              "value": "span-6",
              "label": "50%"
            }
          ],
          "default": "span-12"
        },
        {
          "type": "select",
          "id": "color_scheme",
          "label": "Color scheme",
          "options": [
            {
              "value": "none",
              "label": "None"
            },
            {
              "value": "cs1",
              "label": "1"
            },
            {
              "value": "cs2",
              "label": "2"
            },
            {
              "value": "cs3",
              "label": "3"
            }
          ],
          "default": "cs2"
        }
      ]
    },
    {
      "type":"product",
      "name":"Product",
      "settings":[
        {
          "id": "product",
          "type": "product",
          "label": "Product"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Product"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add a brief introduction to your product.</p>"
        },
