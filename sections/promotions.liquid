{%- liquid

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'pt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'pt0 pb0'
  endif

-%}
<section class="global__section padding-top {{ section_padding }} promotion__section-{{ section.id }}{% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}"
  data-section-id="{{ section.id }}">

  <div class="row grid__wrapper ">
    {% for block in section.blocks %}

      {% liquid

        assign grid_width = block.settings.width

      %}

      {% case block.type %}

        {% when 'banner' %}

          {% liquid

            assign has_title = false
            assign has_text = false
            assign has_button = false

            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.button != blank and block.settings.link != blank
              assign has_button = true
            endif

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-banner span-12 auto sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content center">
              {% if has_title %}
                <p class="h3">
                  {{ block.settings.title | escape }}
                </p>
              {% endif %}
              {% if has_text %}
                <p class="rte">
                  {{ block.settings.text | escape }}
                </p>
              {% endif %}
              {% if has_button %}
                <a href="{{ block.settings.link }}" class="button mt10 mb10">
                  {{ block.settings.button | escape }}
                </a>
              {% endif %}
            </div>

            <style>
              .promotional__section-block.b-{{ block.id }} {
                background: var(--{{ block.settings.color_scheme }}-background);
              }
              {% unless block.settings.color_scheme == 'none' %}
                section.promotion__section-{{ section.id }} .section-title:after {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }} h3,
                .promotional__section-block.b-{{ block.id }} p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                  vertical-align: middle;
                }
              {% endunless %}
            </style>

          </div>

        {% when 'collection' %}

          {% liquid

            assign collection = collections[block.settings.collection]

            assign has_title = false
            assign has_text = false
            assign has_button = false

            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.button != blank and block.settings.collection != blank
              assign has_button = true
            endif

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-collection {{ grid_width }} md-span-12 auto sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content grid__wrapper edge">

              <div class="promotional__collection-content span-4 md-span-6 auto sm-span-12">
                {% if has_title %}
                  <h3 class="h2">
                    {{ block.settings.title | escape }}
                  </h3>
                {% endif %}
                {% if has_text %}
                  <div class="rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
                {% if has_button %}
                  <a href="{{ collection.url }}" class="button mt10 mb10">
                    {{ block.settings.button | escape }}
                  </a>
                {% endif %}
              </div>

              <div class="promotional__collection-grid span-8 md-span-6 sm-span-12 auto">
                <div class="promotional__collection-images grid__wrapper edge">
                  <div class="span-6 auto pci__first">
                    {% if collection != blank %}
                      <a href="{{ collection.url }}">
                        {% if collection.image and block.settings.use_collection_image %}
                          {% render 'basic-responsive-image', type: collection.image, data_widths: '[180, 360, 540, 720, 900]' %}
                          <noscript>
                            <img src="{{ collection.image | img_url: '1024x1024' }}" alt="{{ collection.image.alt | escape }}" class="collection__image">
                          </noscript>
                        {% elsif collection.products.first and collection.products.first.media != empty %}
                          {% render 'basic-responsive-image', type: collection.products.first.featured_media.preview_image, data_widths: '[180, 360, 540, 720, 900, 1080, 1296, 1512]' %}
                          <noscript>
                            <img src="{{ collection.products.first.featured_media.preview_image | img_url: '1024x1024' }}" alt="{{ collection.products.first.featured_media.preview_image.alt | escape }}" class="collection__image">
                          </noscript>
                        {% else %}
                          {% render 'basic-responsive-image', type: blank, data_widths: '[180, 360, 540, 720, 900]' %}
                          <noscript>
                            <img src="{{ blank | img_url: '1024x1024' }}" alt="{{ collection.products.first.featured_media.alt | escape }}" class="collection__image">
                          </noscript>
                        {% endif %}
                      </a>
                    {% else %}
                      <div class="onboard">
                        {{ 'collection-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="span-6 auto pci__last">
                    {% if collection != blank %}
                      <a href="{{ collection.url }}">
                        {% if collection.products[1] and collection.products[1].media != empty %}
                          {% render 'basic-responsive-image', type: collection.products[1].featured_media.preview_image, data_widths: '[180, 360, 540, 720, 900, 1080, 1296, 1512]' %}
                          <noscript>
                            <img src="{{ collection.products[1].featured_media.preview_image | img_url: '1024x1024' }}" alt="{{ collection.products[1].featured_media.preview_image.alt | escape }}" class="collection__image">
                          </noscript>
                        {% endif %}
                      </a>
                    {% else %}
                      <div class="onboard">
                        {{ 'collection-2' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
            <style>
              .promotional__section-block.b-{{ block.id }} {
                background: var(--{{ block.settings.color_scheme }}-background);
              }
              {% unless block.settings.color_scheme == 'none' %}
                section.promotion__section-{{ section.id }} .section-title:after {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }} h3,
                .promotional__section-block.b-{{ block.id }} .rte p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
              {% endunless %}
              .promotional__section-block.b-{{ block.id }} .promotional__collection-content {
                align-self: {{ block.settings.align_self }};
                {% if block.settings.align_self == 'top' %}
                padding-top: 30px;
                {% endif %}
              }
              .promotional__section-block.b-{{ block.id }} .promotional__block-content {
                padding-bottom: 30px;
              }
            </style>
          </div>

        {% when 'product' %}

          {% liquid

            assign product = all_products[block.settings.product]

            assign has_title = false
            assign has_text = false
            assign has_button = false

            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.button != blank and block.settings.product != blank
              assign has_button = true
            endif

            assign preview_image = product.featured_media.preview_image
            assign img_url = preview_image | img_url: '1x1' | replace: '_1x1.', '_{width}x.'

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-product {{ grid_width }} auto md-span-12 sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content grid__wrapper edge">

              <div class="promotional__product-grid {% if product.images.size == 1 %}span-6 {% else %} span-8 {% endif %}md-span-6 sm-span-12 auto">
                <div class="promotional__product-images grid__wrapper edge">
                  <div class="span-6 auto pci__first">
                    {% if product != blank %}
                      <a href="{{ product.url }}">
                        {% render 'basic-responsive-image', type: preview_image, data_widths: '[180, 360, 540, 720, 900]' %}
                        <noscript>
                          <img src="{{ preview_image | img_url: '1024x' }}" alt="{{ preview_image.alt | escape }}">
                        </noscript>
                      </a>
                    {% else %}
                      <div class="onboard">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="span-6 auto pci__last">
                    {% if product != blank %}
                      <a href="{{ product.url }}">
                        {% render 'basic-responsive-image', type: product.media[1], data_widths: '[180, 360, 540, 720, 900]' %}
                        <noscript>
                          <img src="{{ product.media[1] | img_url: '500x' }}" alt="{{ product.media[1].alt | escape }}">
                        </noscript>
                      </a>
                    {% else %}
                      <div class="onboard">
                        {{ 'product-2' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>

              <div class="promotional__product-content {% if product.images.size == 1 %}span-6 single__image-promotion {% else %}span-4 {% endif %}md-span-6 auto sm-span-12">
                {% if has_title %}
                  <h3 class="h2">
                    {{ block.settings.title | escape }}
                  </h3>
                {% endif %}
                {% if has_text %}
                  <div class="rte">
                    {{ block.settings.text }}
                  </div>
                {% endif %}
                {% if has_button %}
                  <a href="{{ product.url }}" class="button mt10 mb10">
                    {{ block.settings.button | escape }}
                  </a>
                {% endif %}
              </div>

            </div>
            <style>
              .promotional__section-block.b-{{ block.id }} {
                background: var(--{{ block.settings.color_scheme }}-background);
              }
              {% unless block.settings.color_scheme == 'none' %}
                section.promotion__section-{{ section.id }} .section-title:after {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }} h3,
                .promotional__section-block.b-{{ block.id }} .rte p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
              {% endunless %}
              .promotional__section-block.b-{{ block.id }} .promotional__product-content {
                align-self: {{ block.settings.align_self }};
                {% if block.settings.align_self == 'top' %}
                padding-top: 30px;
                {% endif %}
              }
              .promotional__section-block.b-{{ block.id }} .promotional__block-content {
                padding-bottom: 30px;
              }
            </style>
          </div>

        {% when 'image' %}

          {% liquid

            assign has_link = false
            assign has_image = false

            if block.settings.link != blank
              assign has_link = true
            endif
            if block.settings.image != blank
              assign has_image = true
            endif

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-image {{ grid_width }} auto sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content">
              <div class="promotional__image-container">
                {% if has_image %}
                  {% if has_link %}<a href="{{ block.settings.link }}">{% endif %}
                    {% render 'basic-responsive-image', type: block.settings.image, data_widths: '[180, 360, 540, 720, 900, 1080, 1296, 1512]' %}
                    <noscript>
                      <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt }}">
                    </noscript>
                    {% if has_link %}</a>{% endif %}
                {% else %}
                  <div class="onboard">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
              </div>
            </div>
          </div>

        {% when 'text' %}

          {% liquid

            assign has_pre_text = false
            assign has_title = false
            assign has_text = false
            assign has_button = false
            assign center = false
            assign supersize  = false

            if block.settings.pre_text != blank
              assign has_pre_text = true
            endif
            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.button != blank and block.settings.link != blank
              assign has_button = true
            endif
            if block.settings.supersize
              assign supersize = true
            endif
            if block.settings.center
              assign center = true
            endif

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-text {{ grid_width }} auto md-span-12 sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content{% if center %} center{% endif %}">
              {% if has_pre_text %}
                <p class="rte">
                  {{ block.settings.pre_text }}
                </p>
              {% endif %}
              {% if has_title %}
                <h3{% if supersize %} class="supersize"{% endif %}>
                  {{ block.settings.title | escape }}
                </h3>
              {% endif %}
              {% if has_text %}
                <div class="rte">
                  {{ block.settings.text }}
                </div>
              {% endif %}
              {% if has_button %}
                <a href="{{ block.settings.link }}" class="button mt10 mb0">
                  {{ block.settings.button | escape }}
                </a>
              {% endif %}
            </div>

            <style>
              .promotional__section-block.b-{{ block.id }} {
                background: var(--{{ block.settings.color_scheme }}-background);
              }
              {% unless block.settings.color_scheme == 'none' %}
                section.promotion__section-{{ section.id }} .section-title:after {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }} h3,
                .promotional__section-block.b-{{ block.id }} .rte p,
                .promotional__section-block.b-{{ block.id }} p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
              {% endunless %}
            </style>

          </div>

        {% when 'hero' %}

          {% liquid

            assign has_title = false
            assign has_text = false
            assign has_button = false
            assign has_image = false
            assign has_caption = false
            assign center = false

            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.button != blank and block.settings.link != blank
              assign has_button = true
            endif
            if block.settings.image
              assign has_image = true
            endif
            if has_title or has_text or has_button
              assign has_caption = true
            endif
            if block.settings.center
              assign center = true
            endif

            case block.settings.image_height
              when 'small'
                assign image_height = '250px'
              when 'medium'
                assign image_height = '450px'
              when 'large'
                assign image_height = '700px'
            endcase

          %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-hero span-12 auto sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content">
              <div class="promotional__hero-container {% if center %} center{% endif %}">
                <div class="hero__image">
                {% if has_image %}
                  <div class="background-image lazyload"
                  data-bgset="{% render 'bgset', image: block.settings.image %}"
                  data-sizes="auto"></div>
                  <noscript>
                    <div class="background-image" style="background-image: url({{ section.settings.image | img_url: '1024x' }});"></div>
                  </noscript>
                {% else %}
                  <div class="onboard">
                    {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                </div>
                {% if has_caption %}
                  <div class="hero__caption pos-{{ block.settings.position }}">
                    {% if has_title %}
                      <h3>
                        {{ block.settings.title | escape }}
                      </h3>
                    {% endif %}
                    {% if has_text %}
                      <p class="rte">
                        {{ block.settings.text | escape }}
                      </p>
                    {% endif %}
                    {% if has_button %}
                      <a href="{{ block.settings.link }}" class="button mt10 mb0">
                        {{ block.settings.button | escape }}
                      </a>
                    {% endif %}
                  </div>
                {% endif %}
              </div>
            </div>

            <style>
              {% if has_caption %}
                .promotional__section-block.b-{{ block.id }} .hero__caption {
                  background: var(--{{ block.settings.color_scheme }}-background);
                }
                .promotional__section-block.b-{{ block.id }} .hero__caption h3,
                .promotional__section-block.b-{{ block.id }} .hero__caption p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
              {% endif %}
              .promotional__section-block.b-{{ block.id }} .promotional__hero-container .background-image {
                height: {{ image_height }};
                background-position: center;
                background-size: cover;
                background-repeat: no-repeat;
              }
              @media screen and (max-width: 740px) {
                .promotional__section-block.b-{{ block.id }} .promotional__hero-container .background-image {
                  height: 400px;
                }
              }
            </style>

          </div>

        {% when 'testimonial' %}

          {% liquid

            assign has_title = false
            assign has_text = false
            assign has_credit = true
            assign has_rating = false

            if block.settings.title != blank
              assign has_title = true
            endif
            if block.settings.text != blank
              assign has_text = true
            endif
            if block.settings.credit != blank
              assign has_text = true
            endif
            if block.settings.rating != 0
              assign has_rating = true
            endif

          %}

          {% capture star %}
            {% render 'snip-icons',
               wrapper: '.testimonial__content',
               type: 'apollo',
               icon: 'star',
               classes: 'testimonial__content--icon vib-center',
               size: '14px',
               fill: block.settings.rating_color,
               hover: block.settings.rating_color %}
          {% endcapture %}

          <div class="promotional__section-block b-{{ block.id }} promotion__section-testimonial {{ grid_width }} md-span-6 auto sm-span-12" {{ block.shopify_attributes }}>
            <div class="promotional__block-content">
              <div class="testimonial__content center">
                {% if has_title %}
                  <h3>
                    {{ block.settings.title | escape }}
                  </h3>
                {% endif %}
                {% if has_text %}
                  <p class="rte">
                    {{ block.settings.text | escape }}
                  </p>
                {% endif %}
                {% if has_credit %}
                  <p class="rte">
                    <small><em>{{ block.settings.credit | escape }}</em></small>
                  </p>
                {% endif %}
                {% if has_rating %}
                  <div class="rating">
                    {% case block.settings.rating %}
                      {% when 1 %}
                        {{ star }}
                      {% when 2 %}
                        {{ star }}
                        {{ star }}
                      {% when 3 %}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                      {% when 4 %}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                      {% when 5 %}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                        {{ star }}
                    {% endcase %}
                  </div>
                {% endif %}
              </div>
            </div>

            <style>
              .promotional__section-block.b-{{ block.id }} {
                background: var(--{{ block.settings.color_scheme }}-background);
              }
              {% unless block.settings.color_scheme == 'none' %}
                section.promotion__section-{{ section.id }} .section-title:after {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }} h3,
                .promotional__section-block.b-{{ block.id }} p {
                  color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
                .promotional__section-block.b-{{ block.id }}.promotion__section-testimonial .promotional__block-content h3 {
                  background: var(--{{ block.settings.color_scheme }}-background) !important;
                }
                .promotional__section-block.b-{{ block.id }}.promotion__section-testimonial .testimonial__content {
                  border-color: var(--{{ block.settings.color_scheme }}-color) !important;
                }
              {% endunless %}
            </style>
          </div>

      {% endcase %}


    {% endfor %}
  </div>

  <style>
    section.promotion__section-{{ section.id }} {
      background: var(--{{ section.settings.color_scheme }}-background);
    }
    {% if section.settings.border_blocks %}
      .promotional__section-block {
        border: 1px solid var(--dotted-color);
      }
    {% endif %}
    {% unless section.settings.color_scheme == 'none' %}
      section.promotion__section-{{ section.id }} .section-title:after {
        border-color: var(--{{ section.settings.color_scheme }}-color) !important;
      }
      section.promotion__section-{{ section.id }} h2,
      section.promotion__section-{{ section.id }} h3,
      section.promotion__section-{{ section.id }} .rte p,
      section.promotion__section-{{ section.id }} .rte a {
        color: var(--{{ section.settings.color_scheme }}-color) !important;
      }
    {% endunless %}
  </style>

</section>
{% schema %}
