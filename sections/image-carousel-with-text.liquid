{%- liquid

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'pt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'pt0 pb0'
  endif

-%}

<section
  class="global__section {{ section_padding }} padding-top global__section-{{ section.id }} {% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}"
  data-section-id="{{ section.id }}"
  data-section-type="image-carousel">

  {% if section.settings.full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}
    {%- liquid

      case section.settings.image_width
        when '33%'
          assign image_width = 'span-4'
          assign image_offset = 'span-8'
        when '50%'
          assign image_width = 'span-6'
          assign image_offset = 'span-6'
        when '66%'
          assign image_width = 'span-8'
          assign image_offset = 'span-4'
      endcase

    -%}

    {%- assign is_carousel = false -%}
    {% if section.blocks.size > 1 %}{%- assign is_carousel = true -%}{%- endif -%}
    {% capture slideshow_config %}{
      "wrapAround":true,
      "cellAlign": "left",
      "dragThreshold":"15",
      "adaptiveHeight": true,
      "pauseAutoPlayOnHover":false,
      "prevNextButtons":true,
      "pageDots": false
   }{% endcapture %}

    {% capture image_layout %}
      <div class="{{ image_width }} auto sm-span-12 contained imageCarousel__withText--{% if is_carousel %}carousel flickity__section js-slideshow{% else %}container{% endif %}"{% if is_carousel %} data-flickity='{{ slideshow_config }}'{% endif %}>
        {% for block in section.blocks %}
          <div class="imageCarousel__withText--image slide--{{ block.id }}" data-block-id="{{ block.id }}" data-slider-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            {% if block.settings.image == blank %}
              <div class="onboard">
                {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
              </div>
            {% else %}
              {% if block.settings.link %}<a href="{{ block.settings.link }}">{% endif %}
              {% render 'basic-responsive-image' | type: block.settings.image %}
              <noscript>
                <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.image.alt }}">
              </noscript>
              {% if block.settings.link %}</a>{% endif %}
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endcapture %}

    <div class="row">
      <div class="imageCarousel__withText--wrapper {{ section.id }} grid__wrapper ">
        {% if section.settings.layout == 'left' %}
          {{ image_layout }}
        {% endif %}
        <div class="{{ image_offset }} auto sm-span-12 contained imageCarousel__withText--caption{% if section.settings.text_align == 'center' %} center{% elsif section.settings.text_align == 'right' %} text-right{% endif %}">
          <div class="imageCarousel__withText--caption-content">
            {% if section.settings.title != blank %}
              <h3>{{ section.settings.title | escape }}</h3>
            {% endif %}
            {% if section.settings.text != blank %}
              <div class="rte">{{ section.settings.text }}</div>
            {% endif %}
            {% if section.settings.button != blank and section.settings.link != blank %}
              <a href="{{ section.settings.link }}" class="button mt10">
                {{ section.settings.button | escape }}
              </a>
            {% endif %}
          </div>
        </div>
        {% if section.settings.layout == 'right' %}
          {{ image_layout }}
        {% endif %}
      </div>
    </div>

  {% if section.settings.full_width %}</div></div>{% endif %}

  <style>

  .global__section-{{ section.id }}  {
    background: var(--{{ section.settings.color_scheme }}-background);
  }
  {% unless section.settings.color_scheme == 'none' %}
    .global__section-{{ section.id }}  .section-title:after {
      border-color: var(--{{ section.settings.color_scheme }}-color) !important;
    }
    .global__section-{{ section.id }} h3,
    .global__section-{{ section.id }} .rte,
    .global__section-{{ section.id }} .rte p,
    .global__section-{{ section.id }} .rte a {
      color: var(--{{ section.settings.color_scheme }}-color) !important;
    }
  {% endunless %}

  </style>
</section>
