{%- liquid

  assign section_padding = ''
  if section.settings.section_padding == 'top'
    assign section_padding = 'pb0'
  elsif section.settings.section_padding == 'bottom'
    assign section_padding = 'mt0'
  elsif section.settings.section_padding == 'none'
    assign section_padding = 'mt0 pb0'
  endif

-%}

<div class="global__section {{ section_padding }}"><section class="image__text-overlay section-{{ section.id }} {% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}" data-section-id="{{ section.id }}">

{% if section.settings.full_width %}<div class="gridlock-fluid"><div class="row">{% endif %}
  <div class="row grid__wrapper">
    {% if section.settings.link != blank %}<a href="{{ section.settings.link }}">{% endif %}
      <div class="image__container contained span-12 auto">
        {% if section.settings.image %}
          <div class="background-image lazyload"
          data-bgset="{% render 'bgset', image: section.settings.image %}"
          data-sizes="auto"></div>
          <noscript>
            <div class="background-image" style="background-image: url({{ section.settings.image | img_url: '1024x' }});"></div>
          </noscript>
        {% else %}
          <div class="onboard">
            {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
        <div class="caption centered">
          {% if section.settings.heading != blank %}
            <h3>{{ section.settings.heading }}</h3>
          {% endif %}
          {% if section.settings.hidden_text != blank %}
            <p>{{ section.settings.hidden_text }}</p>
          {% endif %}
          {% if section.settings.link != blank %}
            <a class="button" href="{{ section.settings.link }}">{{ section.settings.button_text }}</a>
          {% endif %}
        </div>
      </div>
    {% if section.settings.link != blank %}</a>{% endif %}
  </div>
{% if section.settings.full_width %}</div></div>{% endif %}

<style>
  .image__text-overlay.section-{{ section.id }} .background-image {
    height: {{ section.settings.image_height }}px;
  }
  .image__text-overlay.section-{{ section.id }} .caption h3 {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.heading_text_size }}px;
    line-height: 1.5;
  }
  .image__text-overlay.section-{{ section.id }} .caption p {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.hidden_text_size }}px;
    line-height: 1.5;
  }
  .image__text-overlay.section-{{ section.id }} .caption a.button {
    background: {{ section.settings.button_color }};
    color: {{ section.settings.button_text_color }};
  }
  @media screen and ( max-width: 740px ) {
    .image__text-overlay.section-{{ section.id }} .caption h3 {
      font-size: calc({{ section.settings.heading_text_size }}px - ({{ section.settings.heading_text_size }}px * 0.15));
    }
    .image__text-overlay.section-{{ section.id }} .caption p {
      font-size: calc({{ section.settings.hidden_text_size }}px - ({{ section.settings.hidden_text_size }}px * 0.15));
    }
  }
</style>
</section>
<div class="clear"></div></div>
{% schema %}
  {
    "name": "Image with text overlay",
    "settings":
    [
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Enable full width",
        "default": true
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "image_height",
        "min": 100,
        "max": 600,
        "step": 100,
        "unit": "px",
        "label": "Image height",
        "default": 400
      },
      {
        "type": "header",
        "content": "Overlay text"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "Image with Text Overlay"
      },
      {
        "type": "textarea",
        "id": "hidden_text",
        "label": "Text",
        "default": "Pair text with a large full width image to give focus to areas of your store."
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text",
        "default": "View Product"
      },
      {
        "type": "range",
        "id": "heading_text_size",
        "min": 12,
        "max": 48,
        "step": 1,
        "unit": "px",
        "label": "Heading size",
        "default": 32
      },
      {
        "type": "range",
        "id": "hidden_text_size",
        "min": 12,
        "max": 32,
        "step": 1,
        "unit": "px",
        "label": "Text size",
        "default": 18
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "type": "color",
        "id": "button_text_color",
        "label": "Button text",
        "default": "#fff"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button color",
        "default": "#000"
      },
      {
        "type": "select",
        "id": "section_padding",
        "label": "Section spacing",
        "options": [
          {
            "value": "top",
            "label": "Top"
          },
          {
            "value": "bottom",
            "label": "Bottom"
          },
          {
            "value": "both",
            "label": "Both"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "both"
      }
    ],
    "presets":
    [
      {
        "name": "Image with text overlay"
      }
    ],
    "templates":
    [
      "404",
      "article",
      "blog",
      "cart",
      "collection",
      "list-collections",
      "index",
      "page",
      "product",
      "search"
    ]
  }
{% endschema %}
