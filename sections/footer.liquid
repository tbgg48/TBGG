{%- liquid

  assign locale_selector = false
  assign country_selector = false

  if section.settings.show_country_selector and localization.available_countries.size > 1
    assign country_selector = true
  endif

  if section.settings.show_locale_selector and shop.published_locales.size > 1
    assign locale_selector = true
  endif

-%}

<div id="footer" class="footer-section{% if settings.animation != 'none' %} animate {{ settings.animation }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="footer-section">
  <div class="container row">
    <div id="big-footer" class="desktop-12">
      {% for block in section.blocks %}
        <section class="footer-block block-{{ block.id }}" {{ block.shopify_attributes }}>
          {% case block.type %}
            {% when 'menu' %}
              <div class="footer-menu tablet-6 mobile-half footer-sect">
                <h3 class="h5">{{ block.settings.title | escape }}</h3>
                <ul>
                  {% for link in linklists[block.settings.footer_nav].links %}
                    <li>{{ link.title | link_to: link.url }}</li>
                  {% endfor %}
                </ul>
                <style>
                  @media (min-width: 980px) {
                    .footer-block.block-{{ block.id }} {
                      flex-grow: 1;
                      flex-basis: 180px;
                    }
                  }
                </style>
              </div>
            {% when 'social' %}
              <div class="footer-social tablet-6 mobile-3 footer-sect">
                <h3 class="h5">{{ block.settings.title | escape }}</h3>
                <div class="rte">
                  {{ block.settings.mailing_subheading }}
                </div>
                {% render 'mailing' %}
                <div class="clear"></div>
              {% render 'social-icons', wrapper: '.footer-social', fill_color: 'var(--footer-text-color)', hover_color: 'var(--footer-text-color)' %}
              <style>
                @media (min-width: 980px) {
                  .footer-block.block-{{ block.id }} {
                    flex-grow: 2;
                    flex-basis: 400px
                  }
                }
              </style>
              </div>
            {% when 'text' %}
              <div class="footer-text tablet-6 mobile-3 footer-sect">
                <h3 class="h5">{{ block.settings.title | escape }}</h3>
                <div class="rte">
                  {{ block.settings.footer_text }}
                </div>
                <style>
                  @media (min-width: 980px) {
                    .footer-block.block-{{ block.id }} {
                      flex-grow: 2;
                      flex-basis: 400px
                    }
                  }
                </style>
              </div>
            {% endcase %}
        </section>
      {% endfor %}
    </div>
    <div id="bottom-footer" class="sub-footer row">
      <div class="footer-left">
        {% if section.settings.show_social_icons %}
          <div id="social-links">
            {% render 'social-icons', wrapper: '.footer-left', fill_color: 'var(--footer-text-color)', hover_color: 'var(--footer-text-color)' %}
          </div>
        {% endif %}

          <p>{% if section.settings.show_copyright %}<a href="{{ routes.root_url }}">&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}</a> â€¢ {% endif %}{{ powered_by_link }}</p>

      </div>
      <div id="payment" class="footer-right">
        {% if locale_selector or country_selector %}
          <div class="disclosures">

            <div class="selectors-form">
              {%- if locale_selector -%}
                <div class="selectors-form__item">
                  <h2 class="visually-hidden" id="lang-heading">
                    {{ 'general.language.dropdown_label' | t }}
                  </h2>

                  <noscript>
                    {%- form 'localization', id: 'FooterLanguageFormNoScript', class: 'selectors-form', data-disclosure-form: '' -%}
                      <div class="selectors-form__select">
                        <select name="locale_code" class="localization-selector button" aria-labelledby="lang-heading">
                          <option value="" disabled>{{ 'general.language.dropdown_label' | t }}</option>
                          {%- for language in localization.available_languages -%}
                            <option value="{{ language.iso_code }}" lang="{{ language.iso_code }}" {%- if language.iso_code == localization.language.iso_code %} selected{% endif %}>
                              {{ language.endonym_name | capitalize }}
                            </option>
                          {%- endfor -%}
                        </select>
                        {% render 'snip-icons',
                           wrapper: '.section-top-bar__lang',
                           type: 'apollo',
                           icon: 'down-carrot',
                           size: '8px',
                           fill: 'var(--footer-text-color)',
                           hover: 'var(--footer-background-color)' %}
                      </div><!-- /.selectors-form__select -->
                      <button class="localization-form__noscript-btn button mb0 v-center">
                        {% render 'snip-icons',
                           wrapper: '.section-top-bar__lang',
                           type: 'apollo',
                           icon: 'checkmark',
                           size: '12px',
                           fill: 'var(--footer-text-color)',
                           hover: 'var(--footer-background-color)' %}
                      </button>
                    {%- endform -%}
                  </noscript>

                  {%- form 'localization', id: 'FooterLanguageForm', class: 'selectors-form', data-disclosure-form: '' -%}
                  <div class="disclosure" data-disclosure-locale>
                    <button type="button" class="disclosure__toggle" aria-expanded="false" aria-controls="lang-list" aria-describedby="lang-heading" data-disclosure-toggle>
                      {{ form.current_locale.endonym_name }}
                    </button>
                    <ul id="lang-list" class="disclosure-list" data-disclosure-list>
                      {% for locale in form.available_locales %}
                        <li class="disclosure-list__item {% if locale.iso_code == form.current_locale.iso_code %}disclosure-list__item--current{% endif %}">
                          <a class="disclosure-list__option" href="#" title="{{ locale.endonym_name | escape }}" lang="{{ locale.iso_code }}" {% if locale.iso_code == form.current_locale.iso_code %}aria-current="true"{% endif %} data-value="{{ locale.iso_code }}" data-disclosure-option>
                            {{ locale.endonym_name }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                    <input type="hidden" name="locale_code" id="LocaleSelector" value="{{ form.current_locale.iso_code }}" data-disclosure-input/>
                  </div><!-- /.disclosure -->
                  {%- endform -%}
                </div><!-- /.selectors-form__item -->
              {%- endif -%}

              {%- if country_selector -%}
                <div class="selectors-form__item">
                  <h2 class="visually-hidden" id="currency-heading">
                    {{ 'general.currency.dropdown_label' | t }}
                  </h2>
                  <noscript>
                    {%- form 'localization', id: 'FooterCountryFormNoScript', class: 'selectors-form', data-disclosure-form: '' -%}
                      <div class="selectors-form__select">
                        <select class="localization-selector link button" name="country_code" aria-labelledby="currency-heading">
                          <option value="" disabled>{{ 'general.currency.dropdown_label' | t }}</option>
                          {%- for country in localization.available_countries -%}
                            <option value="{{ country.iso_code }}" {%- if country.iso_code == localization.country.iso_code %} selected{% endif %}>
                              {{ country.name }} ({{ country.currency.iso_code }} {{ country.currency.symbol }})
                            </option>
                          {%- endfor -%}
                        </select>
                        {% render 'snip-icons',
                           wrapper: '.section-top-bar__lang',
                           type: 'apollo',
                           icon: 'down-carrot',
                           size: '8px',
                           fill: 'var(--footer-text-color)',
                           hover: 'var(--footer-background-color)' %}
                      </div><!-- /.selectors-form__select -->
                      <button class="localization-form__noscript-btn button mb0 btn-as-link inline-block v-center">
                        {% render 'snip-icons',
                           wrapper: '.section-top-bar__lang',
                           type: 'apollo',
                           icon: 'checkmark',
                           size: '12px',
                           fill: 'var(--footer-text-color)',
                           hover: 'var(--footer-background-color)' %}
                      </button>
                    {%- endform -%}
                  </noscript>
                  {%- form 'localization', id: 'FooterCountryForm', class: 'selectors-form', data-disclosure-form: '' -%}
                    <div class="disclosure" data-disclosure-currency>
                      <button type="button" class="disclosure__toggle" aria-expanded="false" aria-controls="currency-list" aria-describedby="currency-heading" data-disclosure-toggle>
                        {{ localization.country.name }} ({{ localization.country.currency.iso_code }} {{ localization.country.currency.symbol }})
                      </button>
                      <ul id="currency-list" class="disclosure-list" data-disclosure-list>
                        {%- for country in localization.available_countries -%}
                          <li class="disclosure-list__item {% if currency.iso_code == localization.country.iso_code %}disclosure-list__item--current{% endif %}">
                            <a class="disclosure-list__option" href="#" title="{{ country.iso_code | escape }}" {% if country.iso_code == localization.country.iso_code %}aria-current="true"{% endif %} data-value="{{ country.iso_code }}" data-disclosure-option>
                              {{ country.name }} <span class="localization-form__currency">({{ country.currency.iso_code }} {{ country.currency.symbol }})</span>
                            </a>
                          </li>
                        {%- endfor -%}
                      </ul>
                      <input type="hidden" name="country_code" id="FooterCurrencySelector" value="{{ localization.country.iso_code }}" data-disclosure-input/>
                    </div>
                  {%- endform -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {% endif %}
        {% if section.settings.show_credit_cards %}
          <div class="payment-methods">
            {% for type in shop.enabled_payment_types %}
              {{ type | payment_type_svg_tag: class:'payment-icon' }}
            {% endfor %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
  #footer .footer-sect {
    text-align: {{ section.settings.text_alignment }};
    {% if section.settings.text_alignment == 'center' %}
    margin-left: auto;
    margin-right: auto;
    {% endif %}
  }
  .payment-methods svg {
    display: inline;
    width: 40px;
    height: 25.25px;
    text-align: center;
    margin: 3px 1px;
  }

  @media (min-width: 980px) {
    #big-footer {
  	display: flex;
    }
    .footer-block + .footer-block {
      margin-left: 3%;
    }
  }
  div#bottom-footer {
    display: flex;
    margin: 0 auto;
    padding-top: 32px;
    margin-top: 64px;
    align-items: flex-end;
  }

  div#bottom-footer .footer-left {
    width: 50%;
    text-align: left;
  }

  div#bottom-footer .footer-right {
    width: 50%;
    text-align: right;
  }

  div#bottom-footer #copy p {
    text-align: left;
    margin: 0;
  }
  div#bottom-footer #payment {
    text-align: right;
  }
  div#bottom-footer #payment .payment-methods {
    margin-top: 10px;
  }
  div#bottom-footer .selectors-form {
    justify-content: flex-end;
    margin: 0;
  }
  div#bottom-footer #social-links {
    float: none;
    text-align: left;
  }

  @media (min-width: 980px) {
    #footer #payment {
      text-align: {{ section.settings.text_alignment }};
    }
    #footer ul#footer-icons {
      text-align: {{ section.settings.text_alignment }};
    }
    {% if section.settings.text_alignment == 'left' %}
      #footer ul#footer-icons li:first-child {
        margin-left: 0;
        padding-left: 0;
      }
      #footer .selectors-form {
        justify-content: flex-start;
        flex-wrap: nowrap;
      }
    {% endif %}
  }
  @media (max-width: 740px) {
    div#bottom-footer {
      flex-wrap: wrap;
    }
    div#bottom-footer .footer-left {
      width: 100%;
      text-align: left;
      order:2;
      margin-top: 31px;
    }
    div#bottom-footer .footer-right {
      width: 100%;
      text-align: left;
      order: 1;
    }
    div#bottom-footer .selectors-form {
      justify-content: flex-start;
      margin: 0;
    }
    div#bottom-footer #payment {
      text-align: left;
    }
    div#bottom-footer .payment-methods {
      margin-top: 10px;
    }
    div#bottom-footer  .footer-section .disclosure__toggle {
      height: 44px;
      width: 80px;
    }
    div#bottom-footer #social-links {
      display: block;
      margin-bottom: 0;
    }
  }
</style>
{% schema %}
{
  "name": "Footer",
  "max_blocks": 4,
  "settings":
  [
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Alignment",
      "options":
      [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social media icons",
      "default": true,
      "info": "The icons that show are determined by your store's social media settings."
    },
    {
      "type": "checkbox",
      "id": "show_credit_cards",
      "label": "Show payment icons",
      "default": true,
      "info": "The icons that show are determined by your store's payment settings."
    },
    {
      "type": "checkbox",
      "id": "show_copyright",
      "label": "Show site name and copyright",
      "default": true
    },
    {
      "type": "header",
      "content": "Language Selector",
      "info": "To add a language, go to your [language settings.](/admin/settings/languages)"
    },
    {
      "type": "checkbox",
      "id": "show_locale_selector",
      "label": "Show language selector",
      "default": true
    },
    {
      "type": "header",
      "content": "Country/Region Selector",
      "info": "To add a country/region, go to your [payment settings.](/admin/settings/payments)"
    },
    {
      "type": "checkbox",
      "id": "show_country_selector",
      "label": "Show country/region selector",
      "default": true
    }
  ],
  "blocks":
  [
    {
      "type": "menu",
      "name": "Menu",
      "settings":
      [
        {
          "type": "link_list",
          "id": "footer_nav",
          "label": "Choose a menu",
          "info": "This menu won't show dropdown items"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Menu"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social",
      "limit": 1,
      "settings":
      [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Connect with us"
        },
        {
          "type": "richtext",
          "id": "mailing_subheading",
          "label": "Subheading",
          "default": "<p>Email address</p>"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings":
      [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "About"
        },
        {
          "id": "footer_text",
          "type": "richtext",
          "label": "Text",
          "default": "<p>Adding text to your footer helps introduce your business to new customers.</p>"
        }
      ]
    }
  ],
  "default":
  {
    "blocks":
    [
      {
        "type": "text"
      },
      {
        "type": "menu"
      },
      {
        "type": "menu"
      },
      {
        "type": "social"
      }
    ]
  }
}
{% endschema %}
